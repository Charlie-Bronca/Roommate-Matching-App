        block head
        style(type='text/css').

            body{
                margin: 0;
            }
            .NavBar {
                display: flex;
                justify-content: space-between;
                align-items: center;
                width: auto;
                height: 70px;
                padding-left: 50px;
                padding-right: 50px;
                border-bottom: solid 0.5px;
                background-color: white;
            }

            .Logo {
                width: 150px;
                height: 45px;
            }

            .buttons {
                display: flex;
                align-items: center;
                justify-content: space-between;
                width: 200px;
                color: #FE6941;
                cursor: default;
                text-decoration: none;
                color: black;
            }


            footer {
                color: #000000;
            }
        
            .footer-container {
                display: flex;
                justify-content: space-around;
                width: 75%;
                margin-left: 9vw;
                padding: 15px;
            }
        
            .footer-section {
                flex: 1;
            }
        
            .footer-section h3 {
                font-family: sans-serif;
                font-size: 1.4vw;
            
            }
        
            .footer-section ul {
                list-style-type: none;
                padding: 0;
            
            }
        
            .footer-section ul li {
                margin-bottom: 1vw;
                font-family: sans-serif;
                font-weight: 200;
                font-size: 1vw;
            }
            .footer-section ul li a {
                text-decoration: none;
                color: inherit;
            }
            .footer-section ul li a:hover{
                color: #FE6941;
            }
            .footer-section img{
                width: 150px;
                height: 45px;
                margin-top: 38%;
                margin-left: 100px;
                }

        
            @media screen and (max-width: 368px) {
                .footer-container {
                flex-direction: column;
                align-items: center;
                }
        
                .footer-section {
                margin-top: 20px;
                text-align: center;
                }
        
                .footer-section img {
                margin: 10px auto;
                }
            }
            .copyright {
                height: 8vw;
                border-top: 0.1vw solid #000;
            }
        
            .copyright p {
                margin-top: 3vw;
                margin-left: 70vw;
                color: #999;
                font-family: sans-serif;
                font-size: 1vw;
            }







