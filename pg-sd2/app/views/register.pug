doctype html
html(lang='en')
    head
        title Register
        style.
            body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Ensures the body covers the entire viewport height */
            margin: 0; /* Remove default margin */
            flex-direction: column; /* Ensure elements are stacked vertically */
            }
            .header {
            font-weight: bold;
            font-size: 20px;
            font-family: sans-serif;
            margin-bottom: 30px; /* Add some bottom margin */
            /* Move the <p> element above the form */
            }
            form {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            align-content: center;
            }
            label {
            display: inline-block; /* Change display to inline-block */
            width: 250px;
            margin-bottom: 10px;
            font-family: sans-serif;
            font-size: 13px;
            }
            input {
            width: 250px;
            height: 25px;
            margin-bottom: 20px;
            border: solid 0.5px;
            border-radius: 5px;
            }
            button {
            width: 250px;
            height: 30px;
            background-color: rgba(254, 105, 65, 0.75); /* RGBA color with 75% opacity */
            border: solid 0.5px;
            margin-bottom: 20px;
            border-radius: 5px;
            }
            .terms {
            font-size: 12px;
            width: 225px;
            font-family: sans-serif;
            }
            .blue-text {
            color: #106BD5;
            text-decoration: none;
            }
            .blue-text:hover {
            text-decoration: underline; /* Add underline on hover */
            }
            .logo {
            width:100px;
            }

    body
        div
            img.logo(src='/logo/FlatBuddies logo2.png', alt='no logo')
        p.header Create your account
        form(action='/set-password' method='POST')
            label(for='email') Enter your email: 
            input(name='email') 
            label(for='email') Enter your password: 
            input(name='password' type = 'password')
            input(type='submit' value='Submit')
        p.terms
            By creating your account you agree to our 
            span.blue-text Terms and Service and Privacy Policy
