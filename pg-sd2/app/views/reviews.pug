   style.
     body {
     max-width: 100%;
     overflow-x: hidden;
     margin: 0;
     padding: 0;
     height: 100%;
     background-color: #F2E9E2;
     }
     .NavBar {
     display: flex;
     justify-content: space-between;
     align-items: center;
     width: auto;
     height: 70px;
     padding-left: 50px;
     padding-right: 50px;
     background-color: #FFFFFF;
     border-bottom: solid 0.5px;
     }
     .Logo {
     width: 150px;
     height: 45px;
     }
     .buttons {
     display: flex;
     align-items: center;
     justify-content: space-between;
     width: 200px;
     color: #FE6941;
     }
     .Review {
     display: flex;
     justify-content: center;
     align-items: center;
     width: 100%;
     padding-top: 80px;
     padding-bottom: 80px;
     font-family: sans-serif;
     }
     .review-box {
     display: flex;
     flex-direction: column;
     justify-content: center;
     align-items: center;
     background-color: #FFFFFF;
     width: 80%;
     height: auto;
     border-radius: 50px;
     border: solid;
     }
     .title {
     margin-top: 45px;
     margin-bottom: 25px;
     font-size: 20px;
     font-weight: 600;
     }
     .title-p {
     margin-bottom: 40px;
     font-size: 20px;
     }
     .stars {
     zoom: 150%;
     }
     .text-box {
     width: 70%;
     margin-top: 45px;
     }
     .text-box-label {
     }
     .box {
     width: 75%;
     height: 200px;
     border-radius: 25px;
     border: solid;
     }
     .submit-button {
     display: flex;
     justify-content: center;
     align-items: center;
     border-radius: 25px;
     margin-top: 45px;
     margin-bottom: 45px;
     width: 90px;
     height: 30px;
     background-color: rgb(from #FE6941 r g b / 75%);
     box-shadow: inset 0 0 2px;
     border: solid;
     }
     .submit {
     }
     footer {
     color: #000000;
     padding: 20px 0;
     }
     .footer-container {
     display: flex;
     justify-content: space-around;
     width: 70%;
     height: 110px;
     margin: 1px auto;
     padding: 15px;
     }
     .footer-section {
     flex: 1;
     }
     .footer-section h3 {
     font-family: sans-serif;
     font-size: 17px;
     margin-bottom: 10px;
     }
     .footer-section ul {
     list-style-type: none;
     padding: 0;
     }
     .footer-section ul li {
     margin-bottom: 5px;
     font-family: sans-serif;
     font-weight: 200;
     font-size: 13px;
     }
     .footer-section ul li a {
     text-decoration: none;
     color: inherit;
     }
     .footer-section ul li a:hover{
     color: rgb(199, 20, 20);
     }
     .footer-section img{
     width: 150px;
     height: 45px;
     margin-top: 30%;
     margin-left: 100px;
     }
     @media screen and (max-width: 368px) {
     .footer-container {
     flex-direction: column;
     align-items: center;
     }
     .footer-section {
     margin-top: 20px;
     text-align: center;
     }
     .footer-section img {
     margin: 10px auto;
     }
     }
     .copyright {
     height: 80px;
     border-top: 1px solid #000;
     }
     .copyright p {
     margin-top: 30px;
     margin-left: 70%;
     color: #999;
     font-family: sans-serif;
     font-size: 13px;
     }
