    title FlatBuddies
    |     
    style.
      body, html {
      margin: 0;
      padding: 0;
      height: 100%;
      background-color: white;
      }
      .NavBar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: auto;
      height: 70px;
      padding-left: 50px;
      padding-right: 50px;
      border-bottom: solid 0.5px;
      }
      .Logo {
      width: 150px;
      height: 45px;
      }
      .buttons {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 200px;
      color: #FE6941;
      }
      .tophalf {
      width: 100%;
      height: auto;
      background-color: #F2E9E2;
      }
      .lukecel {
      margin-top: 100px;
      margin-left: 100px;
      width: 20%;
      height: auto;
      position: relative;
      }
      .profile {
      border-radius: 4vw;
      display: flex;
      width:  100%;
      height: auto;
      margin-right: 80px;
      }
      .picturemask {
      border-radius: 50%;
      width: 6vw;
      height: 6vw;
      display: flex;
      flex: none;
      position: absolute;
      top: -8%;
      left: 34%;
      overflow: hidden;
      }
      .slogcont {
      width: 25%;
      height: auto;
      display: flex;
      margin-left: 10%;
      }
      .slogan {
      font-family: Arial, Helvetica, sans-serif;
      font-size: 4vw;
      text-align: center;
      display: flex;
      font-weight: bold;
      }
      .content {
      display: flex;
      flex-direction: row;
      align-items: center;
      flex-wrap: wrap;
      }
      .triangle {
      position: relative;
      margin-top: 5%;
      margin-bottom: -0.4%;
      margin-left: -0.2%;
      width: 95%;
      height: auto;
      z-index: 0;
      }
      .tricont {
      height: 50%;
      width: auto;
      position: relative;
      }
      .text {
      font-family: Arial, Helvetica, sans-serif;
      font-size: min(1.3vw, 24px);
      text-align: center;
      width: 28%;
      position: absolute;
      top: 65%;
      left: 53%;
      transform: translate(-50%, -50%);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 1;
      }
      .usertxt {
      text-align: center;
      font-family: Arial, Helvetica, sans-serif;
      font-size: 2vw;
      font-weight: bold;
      margin-top: 5%;
      margin-bottom: 6%;
      }
      .saying {
      text-align: center;
      font-size: 1.5vw;
      font-family: Arial, Helvetica, sans-serif;
      margin-bottom: 2%;
      }
      .users {
      width: 300px;
      height: 400px;
      border-radius: 40px;
      border-style: solid;
      border-width: 1px;
      border-color: black;
      align-items: center;
      margin: 2%;
      }
      .reviews {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
      }
      .reviewtxt {
      font-family: Arial, Helvetica, sans-serif;
      font-size: 20px;
      text-align: center;
      margin-top: 25%;
      padding-left: 20px;
      padding-right: 20px;
      }
      .revpic {
      border-radius: 50%;
      width: 80px;
      height: 80px;
      overflow: hidden;
      align-content: center;
      position: absolute;
      top: -13%;
      left: 38%;
      width: 25%;
      height: 25%;
      }
      .picture {
      width: 100%;
      height: auto;
      object-fit: cover;
      }
      .bottomcont {
      position: relative;
      width: 300px;
      height: 300px;
      top: 20%;
      }
      .bottomcont2 {
      position: relative;
      width: 300px;
      height: 300px;
      top: 15%;
      }
      .oval {
      background-color: #859EBC;
      border-bottom-left-radius: 40px;
      border-bottom-right-radius: 40px;
      width: 100%;
      height: 114px;
      border-bottom: black;
      border-bottom-style: solid;
      border-bottom-width: 1px;
      border-top-left-radius: 80px;
      border-top-right-radius: 80px;
      }
      .name {
      text-align: center;
      font-family: Arial, Helvetica, sans-serif;
      position: absolute;
      top: 22%;
      left: 50%;
      transform: translate(-50%, -50%);
      margin: 0;
      color: white;
      font-size: 18px;
      }
      footer {
      color: #000000;
      padding: 20px 0;
      }
      .footer-container {
      display: flex;
      justify-content: space-around;
      width: 70%; /* Adjust width as needed */
      height: 30vh;
      margin: 1px auto; /* Center the box horizontally */
      padding: 15px;
      border-bottom: 1px solid #000;
      }
      .footer-section {
      flex: 1;
      }
      .footer-section h3 {
      margin-bottom: 10px;
      }
      .footer-section ul {
      list-style-type: none;
      padding: 0;
      }
      .footer-section ul li {
      margin-bottom: 5px;
      }
      .footer-section ul li a {
      text-decoration: none; /* Remove underline */
      color: inherit; /* Inherit color from parent (white) */
      }
      .footer-section ul li a:hover{
      color: red;
      }
      .footer-section img{
      height: 50px; /* Adjust height as needed */
      margin-top: 20%;
      margin-left: 100px;
      }
      @media screen and (max-width: 368px) {
      .footer-container {
      flex-direction: column;
      align-items: center;
      }
      .footer-section {
      margin-top: 20px;
      text-align: center;
      }
      .footer-section img {
      margin: 10px auto;
      }
      }
      .copyright {
      height: 5vh;
      }
      .copyright p {
      margin: 10px;
      margin-left: 70%;
      color: #999;
      }
