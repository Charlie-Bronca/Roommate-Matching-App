      .triangle {
      position: relative;
      margin-top: 5%;
      width: 95%;
      height: 100%;
      z-index: 0;
      object-fit: cover;
      }
      .tricont {
      width: auto;
      position: relative;
      overflow: hidden;
      display: flex;
      align-items: flex-start;
      height: 100%;
      }
      .text {
      font-family: Arial, Helvetica, sans-serif;
      font-size: min(1.3vw, 24px);
      text-align: center;
      width: 28%;
      position: absolute;
      top: 65%;
      left: 53%;
